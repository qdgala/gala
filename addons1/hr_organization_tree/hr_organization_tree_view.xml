<?xml version="1.0" ?>
<openerp>
<data>

    <record model="ir.ui.view" id="hr_organization_tree_graph_view">
        <field name="name">hr organization tree graph</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <graph string="hr organization tree" type="bar">

            </graph>
        </field>
    </record>

    
    <record id="action_hr_organization_tree" model="ir.actions.act_window">
        <field name="name">公司组织结构图</field>
        <field name="res_model">hr.employee</field>
        <field name="target">inline</field>
        <field name="view_type">form</field>
        <field name="view_mode">otree</field>
        <field name="help" type="html">
            <p>Your Employee Chart2</p>
        </field>
    </record>

    <record id="hr_organizatio_tree_view" model="ir.ui.menu">
        <field name="name">公司组织结构图</field>
        <field name="sequence" eval="10"/>
        <field name="action" ref="action_hr_organization_tree"/>
        <field name="parent_id" ref="hr.menu_hr_main"/>
    </record>


    <record id="open_view_department_list" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">hr.department</field>
        <field name="view_type">form</field>
        <field name="view_mode">form,tree</field>
        <field name="search_view_id" ref="hr.view_department_filter"/>
    </record>


</data>
</openerp>
