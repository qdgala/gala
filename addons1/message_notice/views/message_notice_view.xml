<?xml version="1.0"?>
<openerp>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_message_notice_tree">
            <field name="name">信息公告</field>
            <field name="model">message.notice</field>
            <field name="arch" type="xml">
                <tree string="信息公告" colors="red:is_needaction==True;black:state=='draft';blue:state=='ing';grey:state=='ok'">
                    <field name="create_date" string="创建时间"/>
                    <field name="user_id"/>
                    <field name="msg"/>
                    <field name="state"/>
                    <field name="is_needaction"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_message_notice_form">
            <field name="name">信息公告</field>
            <field name="model">message.notice</field>
            <field name="arch" type="xml">
                <form string="信息公告">
                    <header>
                        <button name="btn_to_ing" type="object" string="发布" states="draft"/>
                        <button name="btn_to_ok" type="object" string="完成" states="ing"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="user_id" readonly="1"/>
                                <field name="recver_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <group string="消息正文">
                            <field name="msg" nolabel="1" colspan="4"/>
                        </group>
                    </sheet>
                    <div>
                        <field name="readed_user_ids"/>
                    </div>

                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_message_notice_search">
            <field name="name">信息公告搜索视图</field>
            <field name="model">message.notice</field>
            <field name="arch" type="xml">
                <search string="信息公告搜索视图">
                    <filter string="待办" name="message_needaction" domain="[('is_needaction','=',True)]"/>
                    <!--<field name="name"/>-->
                    <!--<separator/>-->
                    <!--<filter string="未完成任务" domain="[('state','!=','done')]"/>-->
                    <!--<separator/>-->
                    <!--<group expand="0" string="Group By">-->
                    <!--<filter string="状态" domain="[]" context="{'group_by':'state'}"/>-->
                    <!--</group>-->

                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_message_notice">
            <field name="name">信息公告</field>
            <field name="res_model">message.notice</field>
            <field name="view_type">form</field>
            <field name="domain"></field>
            <field name="view_mode">tree,form</field>
            <!--<field name="context"></field>-->
            <field name="search_view_id" ref="view_message_notice_search"/>
            <field name="view_id" ref="view_message_notice_tree"/>
        </record>

        <menuitem id="menu_action_message_notice" action="action_message_notice" parent="oa_workflow.menu_oa_wkf" sequence="0" name="信息公告"/>

    </data>
</openerp>