<?xml version="1.0"?>
<openerp>
    <data noupdate="0">

        <template id="assets_backend" name="load_logs assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/load_logs/static/src/js/load_logs.js"></script>
            </xpath>
        </template>
        <record model="ir.ui.view" id="view_load_logs_tree">
            <field name="name">读取记录</field>
            <field name="model">load.logs</field>
            <field name="arch" type="xml">
                <tree string="读取记录">
                    <field name="create_date" string="首次读取时间"/>
                    <field name="create_uid" string="读取人"/>
                    <field name="write_date" string="最后读取时间"/>
                    <field name="count" string="总读取次数"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_load_logs_form">
            <field name="name">读取记录</field>
            <field name="model">load.logs</field>
            <field name="arch" type="xml">
                <form string="读取记录">
                    <sheet>
                        <group>
                            <group>
                                <field name="create_uid" string="读取人"/>
                                <field name="count" string="总读取次数"/>
                            </group>
                            <group>
                                <field name="create_date" string="首次读取时间"/>
                                <field name="write_date" string="最后读取时间"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>