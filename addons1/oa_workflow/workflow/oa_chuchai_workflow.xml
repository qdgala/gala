<?xml version="1.0"?>
<openerp>
    <data noupdate="0">

        <!--定义工作流-->
        <record id="oa_chuchai_workflow" model="workflow">
            <field name="name">出差申请单</field>
            <field name="osv">oa.chuchai</field>
            <field name="on_create">True</field>
        </record>

        <!--活动（Activity）定义-->
        <record id="activity_oa_chuchai_sq" model="workflow.activity">
            <field name="wkf_id" ref="oa_chuchai_workflow"/>
            <field name="flow_start">True</field>
            <field name="name">出差人申请</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('sq')</field>
        </record>
        <record id="activity_oa_chuchai_ld" model="workflow.activity">
            <field name="wkf_id" ref="oa_chuchai_workflow"/>
            <field name="name">上级领导审批</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('ld')</field>
        </record>
        <record id="activity_oa_chuchai_rs" model="workflow.activity">
            <field name="wkf_id" ref="oa_chuchai_workflow"/>
            <field name="name">人事专员确认</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('rs')</field>
        </record>
        <record id="activity_oa_chuchai_sqqr" model="workflow.activity">
            <field name="wkf_id" ref="oa_chuchai_workflow"/>
            <field name="name">出差人确认</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('sqqr')</field>
        </record>
        <record id="activity_oa_chuchai_xzb" model="workflow.activity">
            <field name="wkf_id" ref="oa_chuchai_workflow"/>
            <field name="name">行政部确认</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('xzb')</field>
        </record>
        <record id="activity_oa_chuchai_ok" model="workflow.activity">
            <field name="wkf_id" ref="oa_chuchai_workflow"/>
            <field name="flow_stop">True</field>
            <field name="name">完成</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('ok')</field>
        </record>
        <record id="activity_oa_chuchai_off" model="workflow.activity">
            <field name="wkf_id" ref="oa_chuchai_workflow"/>
            <field name="flow_stop">True</field>
            <field name="name">关闭</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('off')</field>
        </record>

        <!--迁移（Transition）的定义-->
        <record id="trans_oa_chuchai_sq_off" model="workflow.transition">
            <field name="act_from" ref="activity_oa_chuchai_sq"/>
            <field name="act_to" ref="activity_oa_chuchai_off"/>
            <field name="signal">sq_off</field>
            <field name="condition">is_user()</field>
        </record>

        <record id="trans_oa_chuchai_sq_ld" model="workflow.transition">
            <field name="act_from" ref="activity_oa_chuchai_sq"/>
            <field name="act_to" ref="activity_oa_chuchai_ld"/>
            <field name="signal">sq_ld</field>
            <field name="condition">is_user()</field>
        </record>
        <record id="trans_oa_chuchai_ld_rs" model="workflow.transition">
            <field name="act_from" ref="activity_oa_chuchai_ld"/>
            <field name="act_to" ref="activity_oa_chuchai_rs"/>
            <field name="signal">ld_rs</field>
            <field name="condition">is_ld()</field>
        </record>
        <record id="trans_oa_chuchai_rs_sqqr" model="workflow.transition">
            <field name="act_from" ref="activity_oa_chuchai_rs"/>
            <field name="act_to" ref="activity_oa_chuchai_sqqr"/>
            <field name="signal">rs_sqqr</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_rszy"/>
        </record>
        <record id="trans_oa_chuchai_sqqr_xzb" model="workflow.transition">
            <field name="act_from" ref="activity_oa_chuchai_sqqr"/>
            <field name="act_to" ref="activity_oa_chuchai_xzb"/>
            <field name="signal">sqqr_xzb</field>
            <field name="condition">is_user()</field>
        </record>
        <record id="trans_oa_chuchai_xzb_ok" model="workflow.transition">
            <field name="act_from" ref="activity_oa_chuchai_xzb"/>
            <field name="act_to" ref="activity_oa_chuchai_ok"/>
            <field name="signal">xzb_ok</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_xzb"/>
        </record>

        <!--回退流程-->
        <record id="trans_oa_chuchai_ld_sq" model="workflow.transition">
            <field name="act_from" ref="activity_oa_chuchai_ld"/>
            <field name="act_to" ref="activity_oa_chuchai_sq"/>
            <field name="signal">ld_sq</field>
            <field name="condition">is_ld()</field>
        </record>
        <record id="trans_oa_chuchai_xzb_sqqr" model="workflow.transition">
            <field name="act_from" ref="activity_oa_chuchai_xzb"/>
            <field name="act_to" ref="activity_oa_chuchai_sqqr"/>
            <field name="signal">xzb_sqqr</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_xzb"/>
        </record>


    </data>
</openerp>