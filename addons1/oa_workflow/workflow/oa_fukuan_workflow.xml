<?xml version="1.0"?>
<openerp>
    <data noupdate="0">

        <!--定义工作流-->
        <record id="oa_fukuan_workflow" model="workflow">
            <field name="name">付款申请</field>
            <field name="osv">oa.fukuan</field>
            <field name="on_create">True</field>
        </record>
        <!--活动（Activity）定义-->
        <record id="activity_oa_fukuan_sq" model="workflow.activity">
            <field name="wkf_id" ref="oa_fukuan_workflow"/>
            <field name="flow_start">True</field>
            <field name="name">付款申请人</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('sq')</field>
        </record>
        <record id="activity_oa_fukuan_bm" model="workflow.activity">
            <field name="wkf_id" ref="oa_fukuan_workflow"/>
            <field name="name">部门主管</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('bm')</field>
        </record>
        <record id="activity_oa_fukuan_fz" model="workflow.activity">
            <field name="wkf_id" ref="oa_fukuan_workflow"/>
            <field name="name">分管副总</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('fz')</field>
        </record>
        <record id="activity_oa_fukuan_cw" model="workflow.activity">
            <field name="wkf_id" ref="oa_fukuan_workflow"/>
            <field name="name">财务经理</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('cw')</field>
        </record>
        <record id="activity_oa_fukuan_zjl" model="workflow.activity">
            <field name="wkf_id" ref="oa_fukuan_workflow"/>
            <field name="name">总经理</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('zjl')</field>
        </record>
        <record id="activity_oa_fukuan_cn" model="workflow.activity">
            <field name="wkf_id" ref="oa_fukuan_workflow"/>
            <field name="name">出纳</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('cn')</field>
        </record>
        <record id="activity_oa_fukuan_fkr" model="workflow.activity">
            <field name="wkf_id" ref="oa_fukuan_workflow"/>
            <field name="name">付款人</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('fkr')</field>
        </record>
        <record id="activity_oa_fukuan_ok" model="workflow.activity">
            <field name="wkf_id" ref="oa_fukuan_workflow"/>
            <field name="flow_stop">True</field>
            <field name="name">完成</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('ok')</field>
        </record>
        <record id="activity_oa_fukuan_off" model="workflow.activity">
            <field name="wkf_id" ref="oa_fukuan_workflow"/>
            <field name="flow_stop">True</field>
            <field name="name">关闭</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('off')</field>
        </record>

        <!--迁移（Transition）的定义-->
        <record id="trans_oa_fukuan_sq_off" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_sq"/>
            <field name="act_to" ref="activity_oa_fukuan_off"/>
            <field name="signal">sq_off</field>
            <field name="condition">is_user()</field>
        </record>
        <record id="trans_oa_fukuan_sq_bm" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_sq"/>
            <field name="act_to" ref="activity_oa_fukuan_bm"/>
            <field name="signal">sq_to</field>
            <field name="condition">is_user() and not emp_ls_is_fz and is_not_in(['oa_workflow.group_oa_department_manager','oa_workflow.group_oa_department_fz','oa_workflow.group_oa_department_boss']) and not emp_is_cwb_user()</field>
        </record>
        <record id="trans_oa_fukuan_sq_fz1" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_sq"/>
            <field name="act_to" ref="activity_oa_fukuan_fz"/>
            <field name="signal">sq_to</field>
            <field name="condition">is_user() and emp_ls_is_fz()</field>
        </record>
        <record id="trans_oa_fukuan_sq_fz" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_sq"/>
            <field name="act_to" ref="activity_oa_fukuan_fz"/>
            <field name="signal">sq_to</field>
            <field name="condition">is_user() and is_not_in(['oa_workflow.group_oa_department_fz','oa_workflow.group_oa_department_boss']) and not emp_is_cwb_user()</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_manager"/>
        </record>
        <record id="trans_oa_fukuan_sq_cw" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_sq"/>
            <field name="act_to" ref="activity_oa_fukuan_cw"/>
            <field name="signal">sq_to</field>
            <field name="condition">is_user()</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_fz"/>
        </record>
        <record id="trans_oa_fukuan_sq_cw2" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_sq"/>
            <field name="act_to" ref="activity_oa_fukuan_cw"/>
            <field name="signal">sq_to</field>
            <field name="condition">is_user()</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_boss"/>
        </record>
        <record id="trans_oa_fukuan_sq_cw3" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_sq"/>
            <field name="act_to" ref="activity_oa_fukuan_cw"/>
            <field name="signal">sq_to</field>
            <field name="condition">is_user() and emp_is_cwb_user() and not emp_is_cwb_manager()</field>
        </record>
        <record id="trans_oa_fukuan_sq_zjl" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_sq"/>
            <field name="act_to" ref="activity_oa_fukuan_zjl"/>
            <field name="signal">sq_to</field>
            <field name="condition">is_user()</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_cwb"/>
        </record>

        <record id="trans_oa_fukuan_bm_fz" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_bm"/>
            <field name="act_to" ref="activity_oa_fukuan_fz"/>
            <field name="signal">bm_fz</field>
            <field name="condition">is_bmld()</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_manager"/>
        </record>

        <record id="trans_oa_fukuan_fz_cw" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_fz"/>
            <field name="act_to" ref="activity_oa_fukuan_cw"/>
            <field name="signal">fz_cw</field>
            <field name="condition">is_fz()</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_fz"/>
        </record>

        <record id="trans_oa_fukuan_cw_zjl" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_cw"/>
            <field name="act_to" ref="activity_oa_fukuan_zjl"/>
            <field name="signal">cw_zjl</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_cwb"/>
        </record>

        <record id="trans_oa_fukuan_zjl_cn" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_zjl"/>
            <field name="act_to" ref="activity_oa_fukuan_cn"/>
            <field name="signal">zjl_cn</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_boss"/>
        </record>

        <record id="trans_oa_fukuan_cn_fkr" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_cn"/>
            <field name="act_to" ref="activity_oa_fukuan_fkr"/>
            <field name="signal">cn_fkr</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_cn"/>
        </record>

        <record id="trans_oa_fukuan_fkr_ok" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_fkr"/>
            <field name="act_to" ref="activity_oa_fukuan_ok"/>
            <field name="signal">fkr_ok</field>
            <field name="condition">is_user()</field>
        </record>

        <!--回退流程-->
        <record id="trans_oa_fukuan_bm_sq" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_bm"/>
            <field name="act_to" ref="activity_oa_fukuan_sq"/>
            <field name="signal">bm_sq</field>
            <field name="condition">is_bmld()</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_manager"/>
        </record>
        <record id="trans_oa_fukuan_fz_sq" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_fz"/>
            <field name="act_to" ref="activity_oa_fukuan_sq"/>
            <field name="signal">fz_bm</field>
            <field name="condition">is_fz() and emp_is_child()</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_fz"/>
        </record>
        <record id="trans_oa_fukuan_fz_bm" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_fz"/>
            <field name="act_to" ref="activity_oa_fukuan_bm"/>
            <field name="signal">fz_bm</field>
            <field name="condition">is_fz() and not emp_is_child()</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_fz"/>
        </record>
        <record id="trans_oa_fukuan_cw_sq" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_cw"/>
            <field name="act_to" ref="activity_oa_fukuan_sq"/>
            <field name="signal">cw_fz</field>
            <field name="condition">emp_is_cwb_user() or emp_is_fz()</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_cwb"/>
        </record>
        <record id="trans_oa_fukuan_cw_fz" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_cw"/>
            <field name="act_to" ref="activity_oa_fukuan_fz"/>
            <field name="signal">cw_fz</field>
            <field name="condition">not emp_is_cwb_user() and not emp_is_fz()</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_cwb"/>
        </record>
        <record id="trans_oa_fukuan_zjl_cw" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_zjl"/>
            <field name="act_to" ref="activity_oa_fukuan_cw"/>
            <field name="signal">zjl_cw</field>
            <field name="condition">not emp_is_cwb_manager()</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_boss"/>
        </record>
        <record id="trans_oa_fukuan_zjl_sq" model="workflow.transition">
            <field name="act_from" ref="activity_oa_fukuan_zjl"/>
            <field name="act_to" ref="activity_oa_fukuan_sq"/>
            <field name="signal">zjl_cw</field>
            <field name="condition">emp_is_cwb_manager()</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_boss"/>
        </record>


    </data>
</openerp>