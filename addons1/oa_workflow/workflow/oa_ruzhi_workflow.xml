<?xml version="1.0"?>
<openerp>
    <data noupdate="0">

        <!--定义工作流-->
        <record id="oa_ruzhi_workflow" model="workflow">
            <field name="name">入职信息登记表</field>
            <field name="osv">oa.ruzhi</field>
            <field name="on_create">True</field>
        </record>

        <!--活动（Activity）定义-->
        <record id="activity_oa_ruzhi_sq" model="workflow.activity">
            <field name="wkf_id" ref="oa_ruzhi_workflow"/>
            <field name="flow_start">True</field>
            <field name="name">行政部填写</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('sq')</field>
        </record>


        <record id="activity_oa_ruzhi_ok" model="workflow.activity">
            <field name="wkf_id" ref="oa_ruzhi_workflow"/>
            <field name="flow_stop">True</field>
            <field name="name">完成</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('ok')</field>
        </record>


        <!--迁移（Transition）的定义-->
        <record id="trans_oa_ruzhi_sq_ok" model="workflow.transition">
            <field name="act_from" ref="activity_oa_ruzhi_sq"/>
            <field name="act_to" ref="activity_oa_ruzhi_ok"/>
            <field name="signal">sq_ok</field>
            <field name="condition">is_user()</field>
        </record>
    </data>
</openerp>