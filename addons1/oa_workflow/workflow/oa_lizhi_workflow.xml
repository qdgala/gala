<?xml version="1.0"?>
<openerp>
    <data noupdate="0">

        <!--定义工作流-->
        <record id="oa_lizhi_workflow" model="workflow">
            <field name="name">离职申请</field>
            <field name="osv">oa.lizhi</field>
            <field name="on_create">True</field>
        </record>

        <!--活动（Activity）定义-->
        <record id="activity_oa_lizhi_sq" model="workflow.activity">
            <field name="wkf_id" ref="oa_lizhi_workflow"/>
            <field name="flow_start">True</field>
            <field name="name">离职人员申请</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('sq')</field>
        </record>
        <record id="activity_oa_lizhi_bmsp" model="workflow.activity">
            <field name="wkf_id" ref="oa_lizhi_workflow"/>
            <field name="name">上级领导审批</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('bmsp')</field>
        </record>
        <record id="activity_oa_lizhi_lhsp" model="workflow.activity">
            <field name="wkf_id" ref="oa_lizhi_workflow"/>
            <field name="name">仓管/行政/财务 审批</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('lhsp')</field>
        </record>
        <record id="activity_oa_lizhi_zjlsp" model="workflow.activity">
            <field name="wkf_id" ref="oa_lizhi_workflow"/>
            <field name="name">总经理审批</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('zjlsp')</field>
        </record>
        <record id="activity_oa_lizhi_rssp" model="workflow.activity">
            <field name="wkf_id" ref="oa_lizhi_workflow"/>
            <field name="name">人事专员确认</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('rssp')</field>
        </record>
        <record id="activity_oa_lizhi_ok" model="workflow.activity">
            <field name="wkf_id" ref="oa_lizhi_workflow"/>
            <field name="flow_stop">True</field>
            <field name="name">完成</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('ok')</field>
        </record>
        <record id="activity_oa_lizhi_off" model="workflow.activity">
            <field name="wkf_id" ref="oa_lizhi_workflow"/>
            <field name="flow_stop">True</field>
            <field name="name">关闭</field>
            <field name="kind">function</field>
            <field name="action">wkf_change_and_notice('off')</field>
        </record>

        <!--迁移（Transition）的定义-->
        <record id="trans_oa_lizhi_sq_off" model="workflow.transition">
            <field name="act_from" ref="activity_oa_lizhi_sq"/>
            <field name="act_to" ref="activity_oa_lizhi_off"/>
            <field name="signal">sq_off</field>
            <field name="condition">is_user()</field>
        </record>
        <record id="trans_oa_lizhi_sq_bmsp" model="workflow.transition">
            <field name="act_from" ref="activity_oa_lizhi_sq"/>
            <field name="act_to" ref="activity_oa_lizhi_bmsp"/>
            <field name="signal">sq_bmsp</field>
            <field name="condition">is_user()</field>
        </record>

        <record id="trans_oa_lizhi_bmsp_lhsp" model="workflow.transition">
            <field name="act_from" ref="activity_oa_lizhi_bmsp"/>
            <field name="act_to" ref="activity_oa_lizhi_lhsp"/>
            <field name="signal">bmsp_lhsp</field>
            <field name="condition">is_ld()</field>

        </record>
        <record id="trans_oa_lizhi_lhsp_zjlsp" model="workflow.transition">
            <field name="act_from" ref="activity_oa_lizhi_lhsp"/>
            <field name="act_to" ref="activity_oa_lizhi_zjlsp"/>
            <field name="condition">is_ck and is_xz and is_cw</field>
        </record>
        <record id="trans_oa_lizhi_zjlsp_rssp" model="workflow.transition">
            <field name="act_from" ref="activity_oa_lizhi_zjlsp"/>
            <field name="act_to" ref="activity_oa_lizhi_rssp"/>
            <field name="signal">zjlsp_rssp</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_boss"/>
        </record>
        <record id="trans_oa_lizhi_rssp_ok" model="workflow.transition">
            <field name="act_from" ref="activity_oa_lizhi_rssp"/>
            <field name="act_to" ref="activity_oa_lizhi_ok"/>
            <field name="signal">rssp_ok</field>
            <field name="group_id" ref="oa_workflow.group_oa_department_rszy"/>
        </record>

        <!--回退-->
        <record id="trans_oa_lizhi_bmsp_sq" model="workflow.transition">
            <field name="act_from" ref="activity_oa_lizhi_bmsp"/>
            <field name="act_to" ref="activity_oa_lizhi_sq"/>
            <field name="signal">bmsp_sq</field>
            <field name="condition">is_bmld()</field>
        </record>

    </data>
</openerp>