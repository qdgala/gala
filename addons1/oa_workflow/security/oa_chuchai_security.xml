<?xml version="1.0"?>
<openerp>
    <data noupdate="0">

        <record model="ir.rule" id="oa_chuchai_write_rule">
            <field name="name">只能修改自己未提交的表单</field>
            <field name="model_id" ref="model_oa_chuchai"/>
            <field name="domain_force">[('state','=','sq'),('create_uid','=',user.id)]</field>
            <!--对应的权限：-->
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="False"/>
        </record>
        <record model="ir.rule" id="oa_chuchai_unlink_rule">
            <field name="name">非新建状态不允许删除</field>
            <field name="model_id" ref="model_oa_chuchai"/>
            <field name="domain_force">[('state','=','sq')]</field>
            <!--对应的权限：-->
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="False"/>
        </record>

        <record model="ir.rule" id="oa_chuchai_read1_rule">
            <field name="name">创建人/申请人 可见</field>
            <field name="model_id" ref="model_oa_chuchai"/>
            <field name="domain_force">
                ['|',('create_uid','=',user.id),('emp_id','=',user.employee_ids.id)]
            </field>
            <field name="groups" eval="[(6, 0,  [ref('base.group_user')])]"/>
            <!--对应的权限：-->
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>

        <record model="ir.rule" id="oa_chuchai_read2_rule">
            <field name="name">上级领导 可见</field>
            <field name="model_id" ref="model_oa_chuchai"/>
            <field name="domain_force">
                [('state','!=','sq'),('emp_id','in',user.employee_ids.child_ids.ids)]
            </field>
            <field name="groups" eval="[(6, 0,  [ref('base.group_user')])]"/>
            <!--对应的权限：-->
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>
        <record model="ir.rule" id="oa_chuchai_read3_rule">
            <field name="name">人事专员可见</field>
            <field name="model_id" ref="model_oa_chuchai"/>
            <field name="domain_force">[('state','in',['rs','sqqr','xzb','ok','off'])]</field>
            <field name="groups" eval="[(6, 0,  [ref('oa_workflow.group_oa_department_rszy')])]"/>
            <!--对应的权限：-->
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>
        <record model="ir.rule" id="oa_chuchai_read4_rule">
            <field name="name">行政部可见</field>
            <field name="model_id" ref="model_oa_chuchai"/>
            <field name="domain_force">[('state','in',['xzb','ok','off'])]</field>
            <field name="groups" eval="[(6, 0,  [ref('oa_workflow.group_oa_department_xzb')])]"/>
            <!--对应的权限：-->
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>
        <record model="ir.rule" id="oa_chuchai_read5_rule">
            <field name="name">财务可见</field>
            <field name="model_id" ref="model_oa_chuchai"/>
            <field name="domain_force">[('state','=','ok')]</field>
            <field name="groups" eval="[(6, 0,  [ref('oa_workflow.group_oa_department_cwb')])]"/>
            <!--对应的权限：-->
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>

    </data>
</openerp>