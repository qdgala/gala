<?xml version="1.0"?>
<openerp>
    <data noupdate="0">


        <record model="ir.rule" id="oa_yongzhang_write_rule">
            <field name="name">只能修改自己未提交的表单</field>
            <field name="model_id" ref="model_oa_yongzhang"/>
            <field name="domain_force">[('state','=','sq'),('create_uid','=',user.id)]</field>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="False"/>
        </record>
        <record model="ir.rule" id="oa_yongzhang_unlink_rule">
            <field name="name">非新建状态不允许删除</field>
            <field name="model_id" ref="model_oa_yongzhang"/>
            <field name="domain_force">[('state','=','sq')]</field>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="False"/>
        </record>

        <!--副总申请 行政部领导审批 总经理审批 行政专员确认 -->
        <record model="ir.rule" id="oa_yongzhang_read1_rule">
            <field name="name">副总读取</field>
            <field name="model_id" ref="model_oa_yongzhang"/>
            <field name="domain_force">[('create_uid','=',user.id),('emp_id','=',user.employee_ids.id)]</field>
            <field name="groups" eval="[(6, 0,  [ref('oa_workflow.group_oa_department_xzb')])]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>
        <record model="ir.rule" id="oa_yongzhang_read2_rule">
            <field name="name">行政部经理可读取</field>
            <field name="model_id" ref="model_oa_yongzhang"/>
            <field name="domain_force">[('state','!=','sq')]</field>
            <field name="groups" eval="[(6, 0,  [ref('oa_workflow.group_oa_department_xzb')])]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>
        <record model="ir.rule" id="oa_yongzhang_read3_rule">
            <field name="name">总经理读取</field>
            <field name="model_id" ref="model_oa_yongzhang"/>
            <field name="domain_force">[('state','in',['zjl','xzzy','ok', 'off'])]</field>
            <field name="groups" eval="[(6, 0,  [ref('oa_workflow.group_oa_department_boss')])]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>
        <record model="ir.rule" id="oa_yongzhang_read4_rule">
            <field name="name">行政专员读取</field>
            <field name="model_id" ref="model_oa_yongzhang"/>
            <field name="domain_force">[('state','in',['xzzy','ok', 'off'])]</field>
            <field name="groups" eval="[(6, 0,  [ref('oa_workflow.group_oa_department_xzzy')])]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>
    </data>
</openerp>