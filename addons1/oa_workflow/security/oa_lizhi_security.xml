<?xml version="1.0"?>
<openerp>
    <data noupdate="0">


        <record model="ir.rule" id="oa_lizhi_write_rule">
            <field name="name">只能修改自己未提交的单据</field>
            <field name="model_id" ref="model_oa_lizhi"/>
            <field name="domain_force">[('state','=','sq'),('create_uid','=',user.id)]</field>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="False"/>
        </record>

        <record model="ir.rule" id="oa_lizhi_unlink_rule">
            <field name="name">非新建状态不允许删除</field>
            <field name="model_id" ref="model_oa_lizhi"/>
            <field name="domain_force">[('state','=','sq')]</field>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="False"/>
        </record>

        <record model="ir.rule" id="oa_lizhi_read_rule">
            <field name="name">申请人可见</field>
            <field name="model_id" ref="model_oa_lizhi"/>
            <field name="domain_force">[('create_uid','=',user.id)]</field>
            <field name="groups" eval="[(6, 0,  [ref('base.group_user')])]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>

        <record model="ir.rule" id="oa_lizhi_read1_rule">
            <field name="name">部门经理可见</field>
            <field name="model_id" ref="model_oa_lizhi"/>
            <field name="domain_force">[('state','!=','sq'),('emp_id','in',user.employee_ids[0].child_ids.ids)]</field>
            <field name="groups" eval="[(6, 0, [ref('base.group_user')])]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>

        <record model="ir.rule" id="oa_lizhi_read2_rule">
            <field name="name">仓管、行政、财务 可见</field>
            <field name="model_id" ref="model_oa_lizhi"/>
            <field name="domain_force">[('state','not in',['sq','bmsp'])]</field>
            <field name="groups"
                   eval="[(6, 0,  [
                   ref('oa_workflow.group_oa_department_wlb'),
                   ref('oa_workflow.group_oa_department_xzb'),
                   ref('oa_workflow.group_oa_department_cwb'),
                   ])]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>

        <record model="ir.rule" id="oa_lizhi_read3_rule">
            <field name="name">总经理 可见</field>
            <field name="model_id" ref="model_oa_lizhi"/>
            <field name="domain_force">[('state','in',['zjlsp','rssp','ok','off'])]</field>
            <field name="groups" eval="[(6, 0,  [ref('oa_workflow.group_oa_department_boss')])]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>

        <record model="ir.rule" id="oa_lizhi_read4_rule">
            <field name="name">人事可见</field>
            <field name="model_id" ref="model_oa_lizhi"/>
            <field name="domain_force">[('state','in',['rssp','ok','off'])]</field>
            <field name="groups" eval="[(6, 0,  [ref('oa_workflow.group_oa_department_rszy')])]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>


    </data>
</openerp>