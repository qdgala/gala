<?xml version="1.0"?>
<openerp>
    <data noupdate="0">
        <!--

        -->

        <record model="ir.rule" id="oa_jiangcheng_write_rule">
            <field name="name">只能修改自己未提交的表单</field>
            <field name="model_id" ref="model_oa_jiangcheng"/>
            <field name="domain_force">[('state','=','sq'),('create_uid','=',user.id)]</field>
            <!--对应的权限：-->
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="False"/>
        </record>
        <record model="ir.rule" id="oa_jiangcheng_unlink_rule">
            <field name="name">非新建状态不允许删除</field>
            <field name="model_id" ref="model_oa_jiangcheng"/>
            <field name="domain_force">[('state','=','sq')]</field>
            <!--对应的权限：-->
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="False"/>
        </record>

        <record model="ir.rule" id="oa_jiangcheng_read1_rule">
            <field name="name">创建人/填表人/奖惩人 查看</field>
            <field name="model_id" ref="model_oa_jiangcheng"/>
            <field name="domain_force">['|','|',('create_uid','=',user.id),('tb_user_id','=',user.employee_ids.id),('emp_id','=',user.employee_ids.id)]</field>
            <field name="groups" eval="[(6, 0,  [ref('base.group_user')])]"/>
            <!--对应的权限：-->
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>
        <record model="ir.rule" id="oa_jiangcheng_read2_rule">
            <field name="name">领导 查看</field>
            <field name="model_id" ref="model_oa_jiangcheng"/>
            <field name="domain_force">[('state','!=','sq'),('tb_user_id','in',user.employee_ids.child_ids.ids)]</field>
            <field name="groups" eval="[(6, 0,  [ref('base.group_user')])]"/>
            <!--对应的权限：-->
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>
        <record model="ir.rule" id="oa_jiangcheng_read3_rule">
            <field name="name">总经理 查看</field>
            <field name="model_id" ref="model_oa_jiangcheng"/>
            <field name="domain_force">[('state','not in',['sq','ldsp'])]</field>
            <field name="groups" eval="[(6, 0,  [ref('oa_workflow.group_oa_department_boss')])]"/>
            <!--对应的权限：-->
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>
        <record model="ir.rule" id="oa_jiangcheng_read4_rule">
            <field name="name">行政部 查看</field>
            <field name="model_id" ref="model_oa_jiangcheng"/>
            <field name="domain_force">[('state','not in',['sq','ldsp','zjl'])]</field>
            <field name="groups" eval="[(6, 0,  [ref('oa_workflow.group_oa_department_xzb')])]"/>
            <!--对应的权限：-->
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>
        <record model="ir.rule" id="oa_jiangcheng_read5_rule">
            <field name="name">财务部 查看</field>
            <field name="model_id" ref="model_oa_jiangcheng"/>
            <field name="domain_force">[('state','in',['cwb','ok','off'])]</field>
            <field name="groups" eval="[(6, 0,  [ref('oa_workflow.group_oa_department_cwb')])]"/>
            <!--对应的权限：-->
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>


        <!--读：填表人、被填表人、上级领导、-->

    </data>
</openerp>