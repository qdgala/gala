<?xml version="1.0"?>
<openerp>
    <data noupdate="0">

        <!--
        创建：所有人可创建
        修改：仅创建人、仅创建状态 可修改
        删除：仅创建人、仅创建状态 可删除
        读取：仅创建人、部门领导、副总、总经理、人事专员可查看
        -->


        <record model="ir.rule" id="oa_zhuanzheng_write_rule">
            <field name="name">只能修改自己未提交的单据</field>
            <field name="model_id" ref="model_oa_zhuanzheng"/>
            <field name="domain_force">[('state','=','sq'),('create_uid','=',user.id)]</field>
            <!--对应的权限：-->
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="False"/>
        </record>


        <!-- 试用期人员申请 直接上级领导审批 副总审批 总经理审批 人事专员确认-->
        <record model="ir.rule" id="oa_zhuanzheng_read1_rule">
            <field name="name">创建人/申请人 可见</field>
            <field name="model_id" ref="model_oa_zhuanzheng"/>
            <field name="domain_force">
                ['|',('create_uid','=',user.id),('emp_id','=',user.employee_ids.id)]
            </field>
            <field name="groups" eval="[(6, 0,  [ref('base.group_user')])]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>

        <record model="ir.rule" id="oa_zhuanzheng_read2_rule">
            <field name="name">直接上级领导 可见</field>
            <field name="model_id" ref="model_oa_zhuanzheng"/>
            <field name="domain_force">
                [('state','!=','sq'),('emp_id','in',user.employee_ids.child_ids.ids)]
            </field>
            <field name="groups" eval="[(6, 0,  [ref('base.group_user')])]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>


        <record model="ir.rule" id="oa_zhuanzheng_read4_rule">
            <field name="name">副总可见</field>
            <field name="model_id" ref="model_oa_zhuanzheng"/>
            <field name="domain_force">
                [('state','in',['fzsp','zjlsp','rszyqr','ok','off']),('emp_id','child_of',user.employee_ids.child_ids.ids)]
            </field>
            <field name="groups" eval="[(6, 0,  [ref('oa_workflow.group_oa_department_fz')])]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>

        <record model="ir.rule" id="oa_zhuanzheng_read5_rule">
            <field name="name">总经理 可见</field>
            <field name="model_id" ref="model_oa_zhuanzheng"/>
            <field name="domain_force">[('state','in',['zjlsp','rszyqr','ok','off'])]</field>
            <field name="groups" eval="[(6, 0,  [ref('oa_workflow.group_oa_department_boss')])]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>
        <record model="ir.rule" id="oa_zhuanzheng_read6_rule">
            <field name="name">人事专员 可见</field>
            <field name="model_id" ref="model_oa_zhuanzheng"/>
            <field name="domain_force">[('state','in',['rszyqr','ok','off'])]</field>
            <field name="groups" eval="[(6, 0,  [ref('oa_workflow.group_oa_department_rszy')])]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>
        <record model="ir.rule" id="oa_zhuanzheng_read7_rule">
            <field name="name">行政部 可见</field>
            <field name="model_id" ref="model_oa_zhuanzheng"/>
            <field name="domain_force">[('state','!=','sq')]</field>
            <field name="groups" eval="[(6, 0,  [ref('oa_workflow.group_oa_department_xzb')])]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_read" eval="True"/>
        </record>


    </data>
</openerp>