<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="print_oa_zhuanzheng">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <style>
                            table {
                            border: solid 1px #000;
                            width: 100%;
                            }
                            tr{
                            height:40px;
                            }
                            th {
                            margin-top:5px;
                            padding-left: 10px;
                            border: solid 1px #000;
                            font-size:20px;
                            }

                            td {
                            margin-top:5px;
                            padding-left: 10px;
                            border: solid 1px #000;
                            font-size:20px;
                            align="center";
                            valign="middle";
                            }
                            h2{
                            font-size:50px;
                            }
                    </style>
                    <h2 align="center">转正申请</h2>

                    <table>
                        <tr>
                            <th>姓名</th><td><span t-field="o.emp_id"/></td>
                            <th>部门</th><td colspan="2"><span t-field="o.department_id"/></td>
                            <th>职务</th><td colspan="2"><span t-field="o.job_id"/></td>
                        </tr>
                        <tr>
                            <th>学历</th><td><span t-field="o.xueli"/></td>
                            <th>专业</th><td colspan="2"><span t-field="o.profession"/></td>
                            <th>到岗日期</th><td colspan="2"><span t-field="o.dg_date"/></td>
                        </tr>
                        <tr>
                            <th>试用期间</th><td colspan="4"><span t-field="o.shiyong_qj"/></td>
                            <th>工资标准</th><td colspan="2"><span t-field="o.wage"/></td>
                        </tr>
                        <tr>
                            <th rowspan="2">自评内容</th>
                            <th colspan="2">试用期间的主要工作表现</th>
                            <td colspan="5"><span t-field="o.biaoxian"/></td>
                        </tr>
                        <tr>
                            <th colspan="2">对公司或部门有何建议</th>
                            <td colspan="5"><span t-field="o.jianyi"/></td>
                        </tr>
                        <tr>
                            <th rowspan="9"></th>
                            <th colspan="2">项目/评分</th>
                            <th colspan="2">自评</th>
                            <th colspan="3">初核</th>
                        </tr>
                        <tr>
                            <th>专业知识</th>
                            <th>20</th>
                            <td colspan="2"><span t-field="o.zhishi"/></td>
                            <td colspan="3"><span t-field="o.zhishi_b"/></td>
                        </tr>
                        <tr>
                            <th>工作能力</th>
                            <th>20</th>
                            <td colspan="2"><span t-field="o.gongzuo"/></td>
                            <td colspan="3"><span t-field="o.gongzuo_b"/></td>
                        </tr>
                        <tr>
                            <th>工作效率</th>
                            <th>15</th>
                            <td colspan="2"><span t-field="o.xiaolv"/></td>
                            <td colspan="3"><span t-field="o.xiaolv_b"/></td>
                        </tr>
                        <tr>
                            <th>协调能力</th>
                            <th>15</th>
                            <td colspan="2"><span t-field="o.xietiao"/></td>
                            <td colspan="3"><span t-field="o.xietiao_b"/></td>
                        </tr>
                        <tr>
                            <th>工作态度</th>
                            <th>15</th>
                            <td colspan="2"><span t-field="o.taidu"/></td>
                            <td colspan="3"><span t-field="o.taidu_b"/></td>
                        </tr>
                        <tr>
                            <th>品德</th>
                            <th>10</th>
                            <td colspan="2"><span t-field="o.pinde"/></td>
                            <td colspan="3"><span t-field="o.pinde_b"/></td>
                        </tr>
                        <tr>
                            <th>上进心</th>
                            <th>5</th>
                            <td colspan="2"><span t-field="o.shangjinxin"/></td>
                            <td colspan="3"><span t-field="o.shangjinxin_b"/></td>
                        </tr>
                        <tr>
                            <th colspan="2">考勤情况</th>
                            <th>迟到次<br/><span t-field="o.chidao"/> 分<br/>(1分/次)</th>
                            <th>早退次<br/><span t-field="o.zhaotui"/> 分<br/>(1分/次)</th>
                            <th>病假天<br/><span t-field="o.bingjia"/> 分<br/>(1分/次)</th>
                            <th>事假天<br/><span t-field="o.shijia"/> 分<br/>(2分/次)</th>
                            <th>旷工次<br/><span t-field="o.kuanggong"/> 分<br/>(3分/次)</th>
                        </tr>
                        <tr>
                            <th colspan="3">自评人</th><td colspan="2"><span t-field="o.zpr"/></td>
                            <th>自评分数</th><td colspan="2"><span t-field="o.zpfs"/></td>
                        </tr>
                        <tr>
                            <th colspan="3">初核人</th><td colspan="2"><span t-field="o.chr"/></td>
                            <th>初核分数</th><td colspan="2"><span t-field="o.chfs"/></td>
                        </tr>
                        <tr>
                            <th colspan="3">部门主管<br/>审核评语</th>
                            <td colspan="5"><t t-esc="o.bm_opinion"/></td>
                        </tr>
                        <tr>
                            <th colspan="3">考核结果</th>
                            <td colspan="5"><t t-esc="o.get_jieguo(o.jieguo)"/></td>
                        </tr>
                        <tr>
                            <td  colspan="8"  style="padding:0;">
                                <table width="100%">
                                    <tr>
                                        <th width="20%">操作人</th>
                                        <th width="20%">工作流阶段</th>
                                        <th width="40%">审批意见</th>
                                        <th width="20%">审批结果</th>
                                    </tr>
                                    <t t-set="ops" t-value="o.get_spyj()"/>
                                    <t t-foreach="ops" t-as="op">
                                        <tr>
                                            <td><t t-esc="op['czr']"/></td>
                                            <td><t t-esc="op['gzljd']"/></td>
                                            <td><t t-esc="op['spyj']"/></td>
                                            <td><t t-esc="op['spjg']"/></td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>

                    <br/>

                </div>
            </t>
        </t>
    </template>

    <report
            id="report_oa_zhuanzheng_html"
            string="打印转正申请_HTML"
            model="oa.zhuanzheng"
            report_type="qweb-html"
            file="oa_workflow.print_oa_zhuanzheng"
            name="oa_workflow.print_oa_zhuanzheng"
    />
    <report
            id="report_oa_zhuanzheng_pdf"
            string="打印转正申请_PDF"
            model="oa.zhuanzheng"
            report_type="qweb-pdf"
            file="oa_workflow.print_oa_zhuanzheng"
            name="oa_workflow.print_oa_zhuanzheng"
    />


</odoo>