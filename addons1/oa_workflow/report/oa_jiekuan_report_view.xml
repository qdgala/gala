<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="print_oa_jiekuan">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <style>
                        table {
                        border: solid 1px #000;
                        width: 100%;
                        }
                        tr{
                        height:40px;
                        }
                        th {
                        margin-top:5px;
                        padding-left: 10px;
                        border: solid 1px #000;
                        font-size:20px;
                        }

                        td {
                        margin-top:5px;
                        padding-left: 10px;
                        border: solid 1px #000;
                        font-size:20px;
                        align="center";
                        valign="middle";
                        }
                        h2{
                        font-size:50px;
                        }
                    </style>
                    <h2 align="center">借款申请</h2>
                    <table>
                        <tr>
                            <th>借款单编号</th><td><span t-field="o.jiekuan_no"/></td>
                            <th>申请日期</th><td><span t-field="o.apply_date"/></td>
                            <th>借款人</th><td><span t-field="o.emp_id"/></td>
                        </tr>
                        <tr>
                            <th>部门</th><td><span t-field="o.department_id"/></td>
                            <th>工号</th><td><span t-field="o.job_num"/></td>
                            <th>借款金额</th><td><span t-field="o.amount"/></td>
                        </tr>
                        <tr>
                            <th>预计还款日期</th><td><span t-field="o.plan_hk_date"/></td>
                            <th>相关项目/客户</th><td colspan="3"><span t-field="o.xiangguan"/></td>
                        </tr>
                        <tr>
                            <th>借款事由</th><td colspan="5"><span t-field="o.reason"/></td>
                        </tr>
                        <!--<tr>-->
                            <!--<th>审批意见</th><td colspan="5">???????</td>-->
                        <!--</tr>-->
                        <!--<tr>-->
                            <!--<th>领导人确认</th><td colspan="5">???????????</td>-->
                        <!--</tr>-->
                        <tr>
                           <td  colspan="6"  style="padding:0;">
                                <table width="100%" >
                                    <tr>
                                        <th width="15%">操作人</th>
                                        <th width="15%">审批时间</th>
                                        <th width="15%">工作流阶段</th>
                                        <th width="40%">审批意见</th>
                                        <th width="15%">审批结果</th>
                                    </tr>
                                    <t t-set="ops" t-value="o.get_spyj()"/>
                                    <t t-foreach="ops" t-as="op">
                                        <tr>
                                            <td><t t-esc="op['czr']"/></td>
                                            <td><t t-esc="op['spsj']"/></td>
                                            <td><t t-esc="op['gzljd']"/></td>
                                            <td><t t-esc="op['spyj']"/></td>
                                            <td><t t-esc="op['spjg']"/></td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                    </tr>
                                </table>
                            </td>
                       </tr>
                    </table>

                    <br/>

                </div>
            </t>
        </t>
    </template>

    <report
            id="report_oa_jiekuan_html"
            string="打印借款申请_HTML"
            model="oa.jiekuan"
            report_type="qweb-html"
            file="oa_workflow.print_oa_jiekuan"
            name="oa_workflow.print_oa_jiekuan"
    />
    <report
            id="report_oa_jiekuan_pdf"
            string="打印借款申请_PDF"
            model="oa.jiekuan"
            report_type="qweb-pdf"
            file="oa_workflow.print_oa_jiekuan"
            name="oa_workflow.print_oa_jiekuan"
    />

</odoo>