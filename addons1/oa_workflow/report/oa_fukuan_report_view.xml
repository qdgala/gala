<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="print_oa_fukuan">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <style>
                        table {
                        border: solid 1px #000;
                        width: 100%;
                        }
                        tr{
                        height:40px;
                        }
                        th {
                        margin-top:5px;
                        padding-left: 10px;
                        border: solid 1px #000;
                        font-size:20px;
                        }

                        td {
                        margin-top:5px;
                        padding-left: 10px;
                        border: solid 1px #000;
                        font-size:20px;
                        align="center";
                        valign="middle";
                        }
                        h2{
                        font-size:50px;
                        }
                    </style>
                    <h2 align="center">付款申请</h2>
                    <table>
                        <tr>
                            <th>付款编号</th><td><span t-field="o.fukuan_no"/></td>
                            <th>申请日期</th><td><span t-field="o.apply_date"/></td>
                            <th>状态</th><td><span t-field="o.zhuangtai"/></td>
                        </tr>
                        <tr>
                            <th>申请人工号</th><td><span t-field="o.job_num"/></td>
                            <th>申请人姓名</th><td><span t-field="o.emp_id"/></td>
                            <th>部门</th><td><span t-field="o.department_id"/></td>
                        </tr>
                        <tr>
                            <th>付款期限</th><td><span t-field="o.fukuanqx"/></td>
                            <th>发票情况</th><td><span t-field="o.fapiaoqk"/></td>
                            <th>有无合同</th><td><span t-field="o.danhao"/></td>
                        </tr>
                        <tr>
                            <th>应付款总额</th><td><span t-field="o.yfk_zhonge"/></td>
                            <th>付款比例</th><td><span t-field="o.fk_bili"/></td>
                            <th></th><td></td>
                        </tr>
                        <tr>
                            <th>付款说明</th><td colspan="5"><span t-field="o.fk_shuoming"/></td>
                        </tr>
                        <tr>
                            <th>收款单位</th><td colspan="2"><span t-field="o.sk_danwei"/></td>
                            <th>付款方式</th><td colspan="2"><span t-field="o.fk_fangshi"/></td>
                        </tr>
                        <tr>
                            <th>开户行</th><td colspan="2"><span t-field="o.kaihuhang"/></td>
                            <th>账号</th><td colspan="2"><span t-field="o.zhanghao"/></td>
                        </tr>
                        <tr>
                            <th>上传附件合同</th><td colspan="5">?????????</td>
                        </tr>
                        <tr>
                            <th colspan="6">付款明细</th>
                        </tr>
                        <tr>
                            <td colspan="6"><span t-field="o.fk_mingxi"/></td>
                        </tr>
                        <tr>
                            <th>[小计]</th><th>合计字符金额</th><td><span t-field="o.heji"/></td>
                            <th>大写金额</th><td colspan="2"><span t-field="o.daxie"/></td>
                        </tr>
                        <tr>
                           <td  colspan="6"  style="padding:0;">
                                <table width="100%" >
                                    <tr>
                                        <th width="15%">操作人</th>
                                        <th width="15%">审批时间</th>
                                        <th width="15%">工作流阶段</th>
                                        <th width="40%">审批意见</th>
                                        <th width="15%">审批结果</th>
                                    </tr>
                                    <t t-set="ops" t-value="o.get_spyj()"/>
                                    <t t-foreach="ops" t-as="op">
                                        <tr>
                                            <td><t t-esc="op['czr']"/></td>
                                            <td><t t-esc="op['spsj']"/></td>
                                            <td><t t-esc="op['gzljd']"/></td>
                                            <td><t t-esc="op['spyj']"/></td>
                                            <td><t t-esc="op['spjg']"/></td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                    </tr>
                                </table>
                            </td>
                       </tr>

                    </table>

                    <br/>

                </div>
            </t>
        </t>
    </template>

    <report
            id="report_oa_fukuan_html"
            string="打印付款申请_HTML"
            model="oa.fukuan"
            report_type="qweb-html"
            file="oa_workflow.print_oa_fukuan"
            name="oa_workflow.print_oa_fukuan"
    />
    <report
            id="report_oa_fukuan_pdf"
            string="打印付款申请_PDF"
            model="oa.fukuan"
            report_type="qweb-pdf"
            file="oa_workflow.print_oa_fukuan"
            name="oa_workflow.print_oa_fukuan"
    />

</odoo>