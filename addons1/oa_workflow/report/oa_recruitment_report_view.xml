<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="print_oa_recruitment">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <!--<t t-call="report.external_layout">-->
                    <div class="page">
                        <style>
                            table {
                            border: solid 1px #000;
                            width: 100%;
                            }
                            tr{
                            height:40px;
                            }
                            th {
                            margin-top:5px;
                            padding-left: 10px;
                            border: solid 1px #000;
                            font-size:20px;
                            }

                            td {
                            margin-top:5px;
                            padding-left: 10px;
                            border: solid 1px #000;
                            font-size:20px;
                            align="center";
                            valign="middle";
                            }
                            h2{
                            font-size:50px;
                            }
                        </style>
                        <br/>
                        <br/>
                        <br/>
                        <h2 align="center">人员招聘申请</h2>

                        <table>
                            <tr style="height:0px;">
                                <td width="15%"></td>
                                <td width="15%"></td>
                                <td width="15%"></td>
                                <td width="25%"></td>
                                <td width="15%"></td>
                                <td width="10%"></td>
                            </tr>

                            <tr>
                                <th>申请单号</th>
                                <td><span t-field="o.apply_no"/></td>
                                <th>申请日期</th>
                                <td><span t-field="o.apply_date"/></td>
                                <th>期望到岗日期</th>
                                <td><span t-field="o.plan_date"/></td>
                            </tr>
                            <tr>
                                <th>申请人</th>
                                <td><span t-field="o.apply_emp_id"/></td>
                                <th>部门</th>
                                <td style="font-size:16px;"><span t-field="o.department_id"/></td>
                                <th>申请人数</th>
                                <td><span t-field="o.apply_count"/></td>
                            </tr>
                            <tr>
                                <th>申请招聘职位</th>
                                <td><span t-field="o.job_id"/></td>
                                <th>薪资定位</th>
                                <td colspan="3"><span t-field="o.salary_range"/> </td>
                            </tr>
                            <tr>
                                <th>申请原因</th>
                                <td  colspan="5"><span t-field="o.cause"/></td>
                            </tr>
                            <tr>
                                <th>人员要求</th>
                                <td  colspan="5"><span t-field="o.required"/></td>
                            </tr>
                            <tr>
                                <!--<th>审批意见</th>-->
                                <td  colspan="6"  style="padding:0;">
                                    <table width="100%">
                                        <tr>
                                            <th width="15%">操作人</th>
                                            <th width="15%">审批时间</th>

                                            <th width="15%">工作流阶段</th>
                                            <th width="40%">审批意见</th>
                                            <th width="15%">审批结果</th>
                                        </tr>
                                        <t t-set="ops" t-value="o.get_spyj()"/>
                                        <t t-foreach="ops" t-as="op">
                                            <tr>
                                                <td><t t-esc="op['czr']"/></td>
                                                <td><t t-esc="op['spsj']"/></td>
                                                <td><t t-esc="op['gzljd']"/></td>
                                                <td><t t-esc="op['spyj']"/></td>
                                                <td><t t-esc="op['spjg']"/></td>
                                            </tr>
                                        </t>
                                        <tr>
                                            <td> </td>
                                            <td> </td>
                                            <td> </td>
                                            <td> </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>

                        <br/>

                    </div>
                <!--</t>-->
            </t>
        </t>
    </template>

    <report
            id="report_oa_recruitment_html"
            string="打印招聘申请_HTML"
            model="oa.recruitment"
            report_type="qweb-html"
            file="oa_workflow.print_oa_recruitment"
            name="oa_workflow.print_oa_recruitment"
    />
    <report
            id="report_oa_recruitment_pdf"
            string="打印招聘申请_PDF"
            model="oa.recruitment"
            report_type="qweb-pdf"
            file="oa_workflow.print_oa_recruitment"
            name="oa_workflow.print_oa_recruitment"
    />

</odoo>