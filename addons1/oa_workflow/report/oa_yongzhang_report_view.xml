<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="print_oa_yongzhang">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <style>
                        table {
                        border: solid 1px #000;
                        width: 100%;
                        }
                        tr{
                        height:40px;
                        }
                        th {
                        margin-top:5px;
                        padding-left: 10px;
                        border: solid 1px #000;
                        font-size:20px;
                        }

                        td {
                        margin-top:5px;
                        padding-left: 10px;
                        border: solid 1px #000;
                        font-size:20px;
                        align="center";
                        valign="middle";
                        }
                        h2{
                        font-size:50px;
                        }
                    </style>
                    <h2 align="center">用章申请</h2>

                    <table>
                        <tr>
                            <th width="13%">印章种类</th><td width="20%"><span t-field="o.type"/></td>
                            <th width="13%">使用方式</th><td width="15%"><span t-field="o.way"/></td>
                            <th  width="13%"></th><td  width="20%"></td>
                        </tr>
                        <tr>
                            <th>用章部门</th><td><span t-field="o.department_id"/></td>
                            <th>用章人</th><td><span t-field="o.emp_id"/></td>
                            <th>用章日期</th><td><span t-field="o.date"/></td>
                        </tr>
                        <tr>
                            <th>需盖章文件</th><td colspan="5"><span t-field="o.wenjian"/></td>
                        </tr>
                        <tr>
                            <th>相关附件</th><td colspan="5"></td>
                        </tr>
                        <tr>
                            <th>用章原由</th><td colspan="5"><span t-field="o.yuanyou"/></td>
                        </tr>
                        <tr>
                           <td  colspan="6"  style="padding:0;">
                                <table width="100%" >
                                    <tr>
                                        <th width="15%">操作人</th>
                                        <th width="15%">审批时间</th>
                                        <th width="15%">工作流阶段</th>
                                        <th width="40%">审批意见</th>
                                        <th width="15%">审批结果</th>
                                    </tr>
                                    <t t-set="ops" t-value="o.get_spyj()"/>
                                    <t t-foreach="ops" t-as="op">
                                        <tr>
                                            <td><t t-esc="op['czr']"/></td>
                                            <td><t t-esc="op['spsj']"/></td>
                                            <td><t t-esc="op['gzljd']"/></td>
                                            <td><t t-esc="op['spyj']"/></td>
                                            <td><t t-esc="op['spjg']"/></td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                        <td> </td>
                                    </tr>
                                </table>
                            </td>
                       </tr>
                    </table>
                    <br/>
                </div>
            </t>
        </t>
    </template>

    <report
            id="report_oa_yongzhang_html"
            string="打印用章申请_HTML"
            model="oa.yongzhang"
            report_type="qweb-html"
            file="oa_workflow.print_oa_yongzhang"
            name="oa_workflow.print_oa_yongzhang"
    />
    <report
            id="report_oa_yongzhang_pdf"
            string="打印用章申请_PDF"
            model="oa.yongzhang"
            report_type="qweb-pdf"
            file="oa_workflow.print_oa_yongzhang"
            name="oa_workflow.print_oa_yongzhang"
    />

</odoo>