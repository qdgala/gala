<?xml version="1.0"?>
<openerp>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_oa_jiangcheng_tree">
            <field name="name">奖惩呈批表</field>
            <field name="model">oa.jiangcheng</field>
            <field name="arch" type="xml">
                <tree string="奖惩呈批表">
                    <field name="tb_date"/>
                    <field name="tb_user_id"/>
                    <field name="job_num"/>
                    <field name="emp_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_oa_jiangcheng_form">
            <field name="name">奖惩呈批表</field>
            <field name="model">oa.jiangcheng</field>
            <field name="arch" type="xml">
                <form string="奖惩呈批表">
                    <header>
                        <button string="关闭" name="sq_off" states="sq" type="workflow_stop" class="oe_highlight"/>

                        <button string="填报人申请" name="sq_ldsp" states="sq" type="workflow_submit" class="oe_highlight"/>
                        <button string="上级领导审批" name="ldsp_zjl" states="ldsp" type="workflow_ok" class="oe_highlight"/>
                        <button string="总经理审批" name="zjl_xzb" states="zjl" type="workflow_ok" class="oe_highlight"/>
                        <button string="行政部确认" name="xzb_cwb" states="xzb" type="workflow_ok" class="oe_highlight"/>
                        <button string="财务部确认" name="cwb_ok" states="cwb" type="workflow_ok" class="oe_highlight"/>


                        <button string="上级领导驳回" name="ldsp_sq" states="ldsp" type="workflow_no" class="oe_highlight"/>
                        <button string="总经理驳回" name="zjl_ldsp" states="zjl" type="workflow_no" class="oe_highlight"/>


                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="tb_date"/>
                                <field name="tb_user_id"/>
                                <field name="tb_department_id"/>

                            </group>
                            <group>
                                <field name="job_num"/>
                                <field name="emp_id"/>
                                <field name="rz_date"/>
                                <field name="department_id"/>
                                <field name="job_id"/>

                            </group>
                        </group>
                        <group string="主要事迹或违纪事实">
                            <field name="reason" nolabel="1" colspan="4"/>
                        </group>
                        <group string="奖惩意见">
                            <field name="opinion" nolabel="1" colspan="4"/>
                        </group>
                        <group string="审批意见">
                            <field name="opinion_ids" nolabel="1" readonly="1" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_oa_jiangcheng_search">
            <field name="name">奖惩呈批表搜索视图</field>
            <field name="model">oa.jiangcheng</field>
            <field name="arch" type="xml">
                <search string="奖惩呈批表搜索视图">
                    <filter string="待办" name="message_needaction" domain="[('is_needaction','=',True)]"/>
                    <!--<field name="name"/>-->
                    <!--<separator/>-->
                    <!--<filter string="未完成任务" domain="[('state','!=','done')]"/>-->
                    <!--<separator/>-->
                    <!--<group expand="0" string="Group By">-->
                    <!--<filter string="状态" domain="[]" context="{'group_by':'state'}"/>-->
                    <!--</group>-->

                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_oa_jiangcheng">
            <field name="name">奖惩呈批表</field>
            <field name="res_model">oa.jiangcheng</field>
            <field name="view_type">form</field>
            <field name="domain"></field>
            <field name="view_mode">tree,form</field>
            <!--<field name="context"></field>-->
            <field name="search_view_id" ref="view_oa_jiangcheng_search"/>
            <field name="view_id" ref="view_oa_jiangcheng_tree"/>
        </record>

        <menuitem id="menu_action_oa_jiangcheng" action="action_oa_jiangcheng" parent="menu_oa_wkf" sequence="120"
                  name="奖惩呈批表"/>


    </data>
</openerp>