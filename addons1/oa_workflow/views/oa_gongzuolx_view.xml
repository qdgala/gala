<?xml version="1.0"?>
<openerp>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_oa_gongzuolx_tree">
            <field name="name">工作联系单</field>
            <field name="model">oa.gongzuolx</field>
            <field name="arch" type="xml">
                <tree string="工作联系单">
                    <field name="from_department_id"/>
                    <field name="from_emp_id"/>
                    <field name="from_time"/>
                    <field name="to_department_id"/>
                    <field name="to_emp_id"/>
                    <field name="to_time"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_oa_gongzuolx_form">
            <field name="name">工作联系单</field>
            <field name="model">oa.gongzuolx</field>
            <field name="arch" type="xml">
                <form string="工作联系单">
                    <header>
                        <button string="关闭" name="sq_off" states="sq" type="workflow_stop" class="oe_highlight"/>

                        <button string="申请人申请" name="sq_jsrqr" states="sq" type="workflow_submit" class="oe_highlight"/>
                        <button string="接收人确认" name="jsrqr_sqrqr" states="jsrqr" type="workflow_ok"
                                log_field="chuli" log_type="reproxy" class="oe_highlight"/>
                        <button string="申请人确认" name="sqrqr_ok" states="sqrqr" type="workflow_ok"
                                log_field="pingjia" log_type="reproxy" class="oe_highlight"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="from_department_id"/>
                                <field name="from_emp_id"/>
                                <field name="from_time"/>
                            </group>
                            <group>
                                <field name="to_department_id"/>
                                <field name="to_emp_id"/>
                                <field name="to_time"/>
                            </group>
                        </group>
                        <group string="附件">
                            <field name="fujian_ids" nolabel="1" colspan="4"
                                   domain="[('res_model','=','oa.fukuan'),('res_id','=',id)]"
                                   context="{'default_res_model':'oa.fukuan','default_res_id':id}"/>
                        </group>
                        <group string="需联系的工作内容">
                            <field name="neirong" nolabel="1" colspan="4"/>
                        </group>
                        <group string="审批意见">
                            <field name="opinion_ids" nolabel="1" readonly="1" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_oa_gongzuolx_search">
            <field name="name">工作联系单搜索视图</field>
            <field name="model">oa.gongzuolx</field>
            <field name="arch" type="xml">
                <search string="工作联系单搜索视图">
                    <filter string="待办" name="message_needaction" domain="[('is_needaction','=',True)]"/>
                    <!--<field name="name"/>-->
                    <!--<separator/>-->
                    <!--<filter string="未完成任务" domain="[('state','!=','done')]"/>-->
                    <!--<separator/>-->
                    <!--<group expand="0" string="Group By">-->
                    <!--<filter string="状态" domain="[]" context="{'group_by':'state'}"/>-->
                    <!--</group>-->

                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_oa_gongzuolx">
            <field name="name">工作联系单</field>
            <field name="res_model">oa.gongzuolx</field>
            <field name="view_type">form</field>
            <field name="domain"></field>
            <field name="view_mode">tree,form</field>
            <!--<field name="context"></field>-->
            <field name="search_view_id" ref="view_oa_gongzuolx_search"/>
            <field name="view_id" ref="view_oa_gongzuolx_tree"/>
        </record>

        <menuitem id="menu_action_oa_gongzuolx" action="action_oa_gongzuolx" parent="menu_oa_wkf" sequence="100"
                  name="工作联系单"/>


    </data>
</openerp>