<?xml version="1.0"?>
<openerp>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_oa_yongzhang_tree">
            <field name="name">用章申请</field>
            <field name="model">oa.yongzhang</field>
            <field name="arch" type="xml">
                <tree string="用章申请">

                    <field name="type"/>
                    <field name="way"/>
                    <field name="department_id"/>
                    <field name="emp_id"/>
                    <field name="date"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_oa_yongzhang_form">
            <field name="name">用章申请</field>
            <field name="model">oa.yongzhang</field>
            <field name="arch" type="xml">
                <form string="用章申请">
                    <header>
                        <button string="关闭" name="sq_off" states="sq" type="workflow_stop" class="oe_highlight"/>

                        <button string="副总申请" name="sq_xzld" states="sq" type="workflow_ok" class="oe_highlight"/>
                        <button string="行政部领导审批" name="xzld_zjl_or_xzzy" states="xzld" type="workflow_ok" class="oe_highlight"/>
                        <button string="总经理审批" name="zjl_xzzy" states="zjl" type="workflow_ok" class="oe_highlight"/>
                        <button string="行政专员确认" name="xzzy_ok" states="xzzy" type="workflow_ok" class="oe_highlight"/>

                        <button string="行政部领导驳回" name="xzld_sq" states="xzld" type="workflow_no" class="oe_highlight"/>
                        <button string="总经理驳回" name="zjl_xzld" states="zjl" type="workflow_no" class="oe_highlight"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="type"/>
                                <field name="way"/>
                                <field name="date"/>
                                <field name="wenjian"/>

                            </group>
                            <group>
                                <field name="department_id"/>
                                <field name="emp_id"/>
                                <field name="yuanyou"/>

                            </group>

                        </group>
                        <group string="审批意见">
                            <field name="opinion_ids" nolabel="1" readonly="1" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_oa_yongzhang_search">
            <field name="name">用章申请搜索视图</field>
            <field name="model">oa.yongzhang</field>
            <field name="arch" type="xml">
                <search string="用章申请搜索视图">
                    <filter string="待办" name="message_needaction" domain="[('is_needaction','=',True)]"/>
                    <!--<field name="name"/>-->
                    <!--<separator/>-->
                    <!--<filter string="未完成任务" domain="[('state','!=','done')]"/>-->
                    <!--<separator/>-->
                    <!--<group expand="0" string="Group By">-->
                    <!--<filter string="状态" domain="[]" context="{'group_by':'state'}"/>-->
                    <!--</group>-->

                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_oa_yongzhang">
            <field name="name">用章申请</field>
            <field name="res_model">oa.yongzhang</field>
            <field name="view_type">form</field>
            <field name="domain"></field>
            <field name="view_mode">tree,form</field>
            <!--<field name="context"></field>-->
            <field name="search_view_id" ref="view_oa_yongzhang_search"/>
            <field name="view_id" ref="view_oa_yongzhang_tree"/>
        </record>

        <menuitem id="menu_action_oa_yongzhang" action="action_oa_yongzhang" parent="menu_oa_wkf" sequence="80"
                  name="用章申请"/>


    </data>
</openerp>