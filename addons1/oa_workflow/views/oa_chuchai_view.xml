<?xml version="1.0"?>
<openerp>
    <data noupdate="0">
        <record model="ir.ui.view" id="view_oa_chuchai_xzb_form">
            <field name="name">出差申请单</field>
            <field name="model">oa.chuchai</field>
            <field name="arch" type="xml">
                <form string="行政部确认">
                    <header>
                        <button string="确认" name="xzb_ok" type="workflow_ok" states="xzb" class="oe_highlight"/>
                    </header>
                    <group>
                        <field name="real_date_a" required="1"/>
                        <field name="real_date_b" required="1"/>
                        <label for="real_dates" required="1"/>
                        <div>
                            <field name="real_dates"/>
                            <button name="change_line_ids" type="object" string="批量写入明细"/>
                        </div>
                        <field name="line_ids"/>
                        <field name="state" invisible="1"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_oa_chuchai_tree">
            <field name="name">出差申请单</field>
            <field name="model">oa.chuchai</field>
            <field name="arch" type="xml">
                <tree string="出差申请单">
                    <field name="department_id"/>
                    <field name="emp_id"/>
                    <field name="apply_date"/>
                    <field name="plan_amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_oa_chuchai_form">
            <field name="name">出差申请单</field>
            <field name="model">oa.chuchai</field>
            <field name="arch" type="xml">
                <form string="出差申请单">
                    <header>
                        <button string="关闭" name="sq_off" states="sq" type="workflow_stop" class="oe_highlight"/>

                        <button string="出差人申请" name="sq_ld" states="sq" type="workflow_submit" class="oe_highlight"/>
                        <button string="上级领导审批" name="ld_rs" states="ld" type="workflow_ok" class="oe_highlight"/>
                        <button string="上级领导驳回" name="ld_sq" states="ld" type="workflow_no" class="oe_highlight"/>
                        <button string="人事专员确认" name="rs_sqqr" states="rs" type="workflow_ok" class="oe_highlight"/>
                        <button string="出差人确认" name="sqqr_xzb" states="sqqr" type="workflow_ok" class="oe_highlight"/>
                        <!--<button string="行政部确认" name="xzb_ok" states="xzb" type="workflow_ok" class="oe_highlight"/>-->
                        <button string="行政部确认" name="btn_xzbqr" states="xzb" type="object" class="oe_highlight"/>
                        <button string="行政部驳回" name="xzb_sqqr" states="xzb" type="workflow_no" class="oe_highlight"/>


                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="department_id"/>
                                <field name="emp_id"/>
                                <field name="plan_date_a"/>
                                <field name="plan_date_b"/>
                                <field name="plan_dates"/>
                                <field name="luxian"/>
                            </group>
                            <group>
                                <field name="apply_date"/>
                                <field name="plan_amount"/>
                                <field name="real_date_a"/>
                                <field name="real_date_b"/>
                                <label for="real_dates"/>
                                <div>
                                    <field name="real_dates"/>
                                    <button name="change_line_ids" type="object" string="批量写入明细"/>
                                </div>
                            </group>
                        </group>

                        <group string="同行人员明细">
                            <field name="line_ids" nolabel="1" colspan="4"/>
                        </group>
                        <group string="出差事由">
                            <field name="reason" nolabel="1" colspan="4"/>
                        </group>
                        <group string="审批意见">
                            <field name="opinion_ids" nolabel="1" readonly="1" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_oa_chuchai_search">
            <field name="name">出差申请单搜索视图</field>
            <field name="model">oa.chuchai</field>
            <field name="arch" type="xml">
                <search string="出差申请单搜索视图">
                    <filter string="待办" name="message_needaction" domain="[('is_needaction','=',True)]"/>
                    <!--<field name="name"/>-->
                    <!--<separator/>-->
                    <!--<filter string="未完成任务" domain="[('state','!=','done')]"/>-->
                    <!--<separator/>-->
                    <!--<group expand="0" string="Group By">-->
                    <!--<filter string="状态" domain="[]" context="{'group_by':'state'}"/>-->
                    <!--</group>-->

                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_oa_chuchai">
            <field name="name">出差申请单</field>
            <field name="res_model">oa.chuchai</field>
            <field name="view_type">form</field>
            <field name="domain"></field>
            <field name="view_mode">tree,form</field>
            <!--<field name="context"></field>-->
            <field name="search_view_id" ref="view_oa_chuchai_search"/>
            <field name="view_id" ref="view_oa_chuchai_tree"/>
        </record>

        <menuitem id="menu_action_oa_chuchai" action="action_oa_chuchai" parent="menu_oa_wkf" sequence="110"
                  name="出差申请单"/>


        <!-- 设置窗口动作对应的视图 -->
        <record id="action_oa_chuchai_tree_view" model="ir.actions.act_window.view">
            <field eval="10" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_oa_chuchai_tree"/>
            <field name="act_window_id" ref="action_oa_chuchai"/>
        </record>
        <record id="action_oa_chuchai_form_view" model="ir.actions.act_window.view">
            <field eval="20" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_oa_chuchai_form"/>
            <field name="act_window_id" ref="action_oa_chuchai"/>
        </record>


    </data>
</openerp>