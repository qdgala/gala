<?xml version="1.0"?>
<openerp>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_oa_yunfeibx_tree">
            <field name="name">运费报销</field>
            <field name="model">oa.yunfeibx</field>
            <field name="arch" type="xml">
                <tree string="运费报销">
                    <field name="yunfeibx_no"/>
                    <field name="apply_date"/>
                    <field name="emp_id"/>
                    <field name="department_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_oa_yunfeibx_form">
            <field name="name">运费报销</field>
            <field name="model">oa.yunfeibx</field>
            <field name="arch" type="xml">
                <form string="运费报销">
                    <header>
                        <button string="关闭" name="sq_off" states="sq" type="workflow_stop" class="oe_highlight"/>

                        <button string="报销人申请" name="sq_to" states="sq" type="workflow_submit" class="oe_highlight"/>
                        <button string="部门主管审批" name="bm_fz" states="bm" type="workflow_ok" class="oe_highlight"/>
                        <button string="分管副总审批" name="fz_cw" states="fz" type="workflow_ok" class="oe_highlight"/>
                        <button string="财务经理审批" name="cw_zjl" states="cw" type="workflow_ok" class="oe_highlight"/>
                        <button string="总经理审批" name="zjl_cn" states="zjl" type="workflow_ok" class="oe_highlight"/>
                        <button string="出纳审批" name="cn_bxr" states="cn" type="workflow_ok" class="oe_highlight"/>
                        <button string="报销人审批" name="bxr_ok" states="bxr" type="workflow_ok" class="oe_highlight"/>

                        <button string="部门主管驳回" name="bm_sq" states="bm" type="workflow_no" class="oe_highlight"/>
                        <button string="分管副总驳回" name="fz_bm" states="fz" type="workflow_no" class="oe_highlight"/>
                        <button string="财务经理驳回" name="cw_fz" states="cw" type="workflow_no" class="oe_highlight"/>
                        <button string="总经理驳回" name="zjl_cw" states="zjl" type="workflow_no" class="oe_highlight"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="yunfeibx_no" readonly="1"/>
                                <field name="emp_id"/>
                                <field name="job_num"/>
                            </group>
                            <group>
                                <field name="apply_date"/>
                                <field name="department_id"/>
                                <field name="cl"/>
                                <field name="jsr"/>
                                <field name="code"/>
                                <field name="wlgs"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="lcs"/>
                                <field name="heji"/>
                            </group>
                            <group>
                                <field name="sfd"/>
                                <field name="mdd"/>
                                <field name="daxie" readonly="1"/>
                            </group>
                        </group>

                        <group string="附件">
                            <field name="fujian_ids" nolabel="1" colspan="4"
                                   domain="[('res_model','=','oa.fukuan'),('res_id','=',id)]"
                                   context="{'default_res_model':'oa.fukuan','default_res_id':id}"/>
                        </group>

                        <group string="审批意见">
                            <field name="opinion_ids" nolabel="1" readonly="1" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_oa_yunfeibx_search">
            <field name="name">运费报销搜索视图</field>
            <field name="model">oa.yunfeibx</field>
            <field name="arch" type="xml">
                <search string="运费报销搜索视图">
                    <filter string="待办" name="message_needaction" domain="[('is_needaction','=',True)]"/>
                    <!--<field name="name"/>-->
                    <!--<separator/>-->
                    <!--<filter string="未完成任务" domain="[('state','!=','done')]"/>-->
                    <!--<separator/>-->
                    <!--<group expand="0" string="Group By">-->
                    <!--<filter string="状态" domain="[]" context="{'group_by':'state'}"/>-->
                    <!--</group>-->

                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_oa_yunfeibx">
            <field name="name">运费报销</field>
            <field name="res_model">oa.yunfeibx</field>
            <field name="view_type">form</field>
            <field name="domain"></field>
            <field name="view_mode">tree,form</field>
            <!--<field name="context"></field>-->
            <field name="search_view_id" ref="view_oa_yunfeibx_search"/>
            <field name="view_id" ref="view_oa_yunfeibx_tree"/>
        </record>

        <menuitem id="menu_action_oa_yunfeibx" action="action_oa_yunfeibx" parent="menu_oa_wkf" sequence="60"
                  name="运费报销"/>

        <!--流水号定义-->
        <record forcecreate="1" id="seq_oa_yunfeibx" model="ir.sequence">
            <field name="name">运费报销</field>
            <field name="code">oa.yunfeibx.no</field>
            <field name="padding" eval="6"/>
            <field name="prefix">FYBX</field>
        </record>


    </data>
</openerp>