<?xml version="1.0"?>
<openerp>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_oa_jiekuan_tree">
            <field name="name">借款申请</field>
            <field name="model">oa.jiekuan</field>
            <field name="arch" type="xml">
                <tree string="借款申请">
                    <field name="jiekuan_no"/>
                    <field name="apply_date"/>
                    <field name="emp_id"/>
                    <field name="department_id"/>
                    <field name="amount"/>
                    <field name="plan_hk_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_oa_jiekuan_form">
            <field name="name">借款申请</field>
            <field name="model">oa.jiekuan</field>
            <field name="arch" type="xml">
                <form string="借款申请">
                    <header>
                        <button string="关闭" name="sq_off" states="sq" type="workflow_stop" class="oe_highlight"/>

                        <button string="借款人申请" name="sq_to" states="sq" type="workflow_submit" class="oe_highlight"/>
                        <button string="部门领导审批" name="bmsp_fgfz" states="bmsp" type="workflow_ok" class="oe_highlight"/>
                        <button string="分管副总审批" name="fgfz_cwsp" states="fgfz" type="workflow_ok" class="oe_highlight"/>
                        <button string="财务领导审批" name="cwsp_zjl" states="cwsp" type="workflow_ok" class="oe_highlight"/>
                        <button string="总经理审批" name="zjl_cnqr" states="zjl" type="workflow_ok" class="oe_highlight"/>
                        <button string="出纳确认" name="cnqr_lkrqr" states="cnqr" type="workflow_ok" class="oe_highlight"/>
                        <button string="领款人确认" name="lkrqr_ok" states="lkrqr" type="workflow_ok" class="oe_highlight"/>

                        <button string="部门主管驳回" name="bm_sq" states="bmsp" type="workflow_no" class="oe_highlight"/>
                        <button string="分管副总驳回" name="fz_bm" states="fgfz" type="workflow_no" class="oe_highlight"/>
                        <button string="财务经理驳回" name="cw_fz" states="cwsp" type="workflow_no" class="oe_highlight"/>
                        <button string="总经理驳回" name="zjl_cw" states="zjl" type="workflow_no" class="oe_highlight"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="jiekuan_no" readonly="1"/>
                                <field name="amount"/>
                                <field name="plan_hk_date"/>
                                <field name="xiangguan"/>
                                <field name="create_uid" readonly="1" string="创建人"/>

                            </group>
                            <group>
                                <field name="apply_date"/>
                                <field name="emp_id"/>
                                <field name="department_id"/>
                                <field name="job_num"/>

                            </group>
                        </group>
                        <group string="借款事由">
                            <field name="reason" nolabel="1" colspan="4"/>
                        </group>
                        <group string="审批意见">
                            <field name="opinion_ids" nolabel="1" readonly="1" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_oa_jiekuan_search">
            <field name="name">借款申请搜索视图</field>
            <field name="model">oa.jiekuan</field>
            <field name="arch" type="xml">
                <search string="借款申请搜索视图">
                    <filter string="待办" name="message_needaction" domain="[('is_needaction','=',True)]"/>
                    <!--<field name="name"/>-->
                    <!--<separator/>-->
                    <!--<filter string="未完成任务" domain="[('state','!=','done')]"/>-->
                    <!--<separator/>-->
                    <!--<group expand="0" string="Group By">-->
                    <!--<filter string="状态" domain="[]" context="{'group_by':'state'}"/>-->
                    <!--</group>-->

                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_oa_jiekuan">
            <field name="name">借款申请</field>
            <field name="res_model">oa.jiekuan</field>
            <field name="view_type">form</field>
            <field name="domain"></field>
            <field name="view_mode">tree,form</field>
            <!--<field name="context"></field>-->
            <field name="search_view_id" ref="view_oa_jiekuan_search"/>
            <field name="view_id" ref="view_oa_jiekuan_tree"/>
        </record>

        <menuitem id="menu_action_oa_jiekuan" action="action_oa_jiekuan" parent="menu_oa_wkf" sequence="50"
                  name="借款申请"/>


        <!--流水号定义-->
        <record forcecreate="1" id="seq_oa_jiekuan_no" model="ir.sequence">
            <field name="name">借款申请</field>
            <field name="code">oa.jiekuan.no</field>
            <field name="padding" eval="5"/>
            <field name="prefix">JK</field>
        </record>


    </data>
</openerp>