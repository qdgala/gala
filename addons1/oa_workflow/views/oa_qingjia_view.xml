<?xml version="1.0"?>
<openerp>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_oa_qingjia_tree">
            <field name="name">请假申请</field>
            <field name="model">oa.qingjia</field>
            <field name="arch" type="xml">
                <tree string="请假申请">
                    <field name="emp_id"/>
                    <field name="department_id"/>
                    <field name="apply_date"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <field name="total_time"/>
                    <field name="reason"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_oa_qingjia_form">
            <field name="name">请假申请</field>
            <field name="model">oa.qingjia</field>
            <field name="arch" type="xml">
                <form string="请假申请">
                    <header>
                        <button string="关闭" name="sq_off" states="sq" type="workflow_stop" class="oe_highlight"/>

                        <button string="申请人申请" name="sq_ldsp" states="sq" type="workflow_submit" class="oe_highlight"/>
                        <button string="上级领导审批" name="ldsp_to" states="ldsp" type="workflow_ok"
                                class="oe_highlight"/>
                        <button string="经理审批" name="jlsp_xzbqr" states="jlsp" type="workflow_ok" class="oe_highlight"/>
                        <button string="行政部确认" name="xzbqr_ok" states="xzbqr" type="workflow_ok" class="oe_highlight"/>

                        <button string="上级领导驳回" name="ldsp_sq" states="ldsp" type="workflow_no"
                                class="oe_highlight"/>
                        <button string="经理驳回" name="jlsp_ldsp" states="jlsp" type="workflow_no" class="oe_highlight"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="emp_id"/>
                                <field name="department_id"/>
                                <field name="apply_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="start_time"/>
                                <field name="end_time"/>
                                <field name="total_time"/>
                            </group>
                        </group>
                        <group string="请假理由">
                            <field name="reason" nolabel="1"/>
                        </group>
                        <group string="审批意见">
                            <field name="opinion_ids" nolabel="1" readonly="1" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_oa_qingjia_search">
            <field name="name">请假申请搜索视图</field>
            <field name="model">oa.qingjia</field>
            <field name="arch" type="xml">
                <search string="请假申请搜索视图">
                    <filter string="待办" name="message_needaction" domain="[('is_needaction','=',True)]"/>
                    <!--<field name="name"/>-->
                    <!--<separator/>-->
                    <!--<filter string="未完成任务" domain="[('state','!=','done')]"/>-->
                    <!--<separator/>-->
                    <!--<group expand="0" string="Group By">-->
                    <!--<filter string="状态" domain="[]" context="{'group_by':'state'}"/>-->
                    <!--</group>-->

                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_oa_qingjia">
            <field name="name">请假申请</field>
            <field name="res_model">oa.qingjia</field>
            <field name="view_type">form</field>
            <field name="domain"></field>
            <field name="view_mode">tree,form</field>
            <!--<field name="context"></field>-->
            <field name="search_view_id" ref="view_oa_qingjia_search"/>
            <field name="view_id" ref="view_oa_qingjia_tree"/>
        </record>

        <menuitem id="menu_action_oa_qingjia" action="action_oa_qingjia" parent="menu_oa_wkf" sequence="30"
                  name="请假申请"/>

    </data>
</openerp>