<?xml version="1.0"?>
<openerp>
    <data noupdate="0">
        <template id="assets_backend" name="oa_wkf assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/wkf_logs/static/src/css/wkf_log_widget.css"/>
                <script type="text/javascript" src="/wkf_logs/static/src/js/wkf_log_widget.js"></script>
            </xpath>
        </template>

        <record model="ir.ui.view" id="view_wkf_logs_tree">
            <field name="name">工作流日志</field>
            <field name="model">wkf.logs</field>
            <field name="arch" type="xml">
                <tree string="工作流日志">
                    <field name="create_date" string="时间"/>
                    <field name="create_uid" string="操作人"/>
                    <field name="act_id"/>
                    <field name="info"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_wkf_logs_form">
            <field name="name">工作流日志</field>
            <field name="model">wkf.logs</field>
            <field name="arch" type="xml">
                <form string="工作流日志">
                    <sheet>
                        <group>
                            <field name="create_date" string="时间"/>
                            <field name="create_uid" string="操作人"/>
                            <field name="res_model"/>
                            <field name="res_id"/>
                            <field name="act_id"/>
                            <field name="info"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_wkf_logs_search">
            <field name="name">工作流日志搜索视图</field>
            <field name="model">wkf.logs</field>
            <field name="arch" type="xml">
                <search string="工作流日志搜索视图">
                    <!--<field name="name"/>-->
                    <!--<separator/>-->
                    <!--<filter string="未完成任务" domain="[('state','!=','done')]"/>-->
                    <!--<separator/>-->
                    <!--<group expand="0" string="Group By">-->
                    <!--<filter string="状态" domain="[]" context="{'group_by':'state'}"/>-->
                    <!--</group>-->

                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_wkf_logs">
            <field name="name">工作流日志</field>
            <field name="res_model">wkf.logs</field>
            <field name="view_type">form</field>
            <field name="domain"></field>
            <field name="view_mode">tree,form</field>
            <!--<field name="context"></field>-->
            <field name="search_view_id" ref="view_wkf_logs_search"/>
            <field name="view_id" ref="view_wkf_logs_tree"/>
        </record>

        <menuitem id="menu_action_wkf_logs" action="action_wkf_logs" parent="base.menu_custom" sequence="40" name="工作流日志"/>

    </data>
</openerp>