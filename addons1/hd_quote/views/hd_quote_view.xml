<?xml version="1.0"?>
<openerp>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_hd_quote_tree">
            <field name="name">报价单汇总</field>
            <field name="model">hd.quote</field>
            <field name="arch" type="xml">
                <tree string="报价单汇总">
                    <field name="name"/>
                    <field name="partner_id"/>

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_hd_quote_form">
            <field name="name">报价单汇总</field>
            <field name="model">hd.quote</field>
            <field name="arch" type="xml">
                <form string="报价单汇总">
                    <header>
                        <!--<button name="btn_import_data" type="object" string="导入excel"/>-->
                        <!--<button name="btn_read_header" type="object" string="读取报价单汇总 测试"/>-->
                        <button name="compute_zk" type="object" string="刷新明细"/>
                    </header>
                    <sheet>

                        <group>
                            <group>
                                <field name="name"/>
                                <field name="xshth"/>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="excel"/>
                                <field name="jiacheng"/>


                            </group>
                        </group>
                        <group string="明细单">
                            <field name="order_ids" nolabel="1" colspan="4">
                                <tree>
                                    <field name="name"/>
                                    <field name="hb_type"/>
                                    <field name="state"/>
                                    <field name="jiacheng"/>
                                    <field name="amount_total"/>

                                    <button name="btn_open_this" type="object" string="打开" icon="gtk-jump-to"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_hd_quote_search">
            <field name="name">报价单汇总搜索视图</field>
            <field name="model">hd.quote</field>
            <field name="arch" type="xml">
                <search string="报价单汇总搜索视图">
                    <!--<field name="name"/>-->
                    <!--<separator/>-->
                    <!--<filter string="未完成任务" domain="[('state','!=','done')]"/>-->
                    <!--<separator/>-->
                    <!--<group expand="0" string="Group By">-->
                    <!--<filter string="状态" domain="[]" context="{'group_by':'state'}"/>-->
                    <!--</group>-->

                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_hd_quote">
            <field name="name">报价单汇总</field>
            <field name="res_model">hd.quote</field>
            <field name="view_type">form</field>
            <field name="domain"></field>
            <field name="view_mode">tree,form</field>
            <!--<field name="context"></field>-->
            <field name="search_view_id" ref="view_hd_quote_search"/>
            <field name="view_id" ref="view_hd_quote_tree"/>
        </record>

        <menuitem id="menu_action_hd_quote" action="action_hd_quote" parent="base.menu_sales" sequence="11" name="报价单汇总"/>


    </data>
</openerp>