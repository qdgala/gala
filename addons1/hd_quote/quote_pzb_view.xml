<?xml version="1.0"?>
<openerp>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_quote_pzb_tree">
            <field name="name">报价单配置表</field>
            <field name="model">quote.pzb</field>
            <field name="arch" type="xml">
                <tree string="报价单配置表">
                    <field name="name"/>
                    <field name="hd_quote"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_quote_pzb_form">
            <field name="name">报价单配置表</field>
            <field name="model">quote.pzb</field>
            <field name="arch" type="xml">
                <form string="报价单配置表">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="hd_quote"/>
                            </group>
                        </group>
                        <group string="明细">
                            <field name="order_ids" nolabel="1" colspan="4" >
                                <tree editable="bottom">
                                    <field name="create_date"/>
                                    <field name="create_uid"/>
                                    <field name="excel"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_quote_pzb_search">
            <field name="name">报价单配置表搜索视图</field>
            <field name="model">quote.pzb</field>
            <field name="arch" type="xml">
                <search string="报价单配置表搜索视图">
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_quote_pzb">
            <field name="name">报价单配置表</field>
            <field name="res_model">quote.pzb</field>
            <field name="view_type">form</field>
            <field name="domain"></field>
            <field name="view_mode">tree,form</field>
            <!--<field name="context"></field>-->
            <field name="search_view_id" ref="view_quote_pzb_search"/>
            <field name="view_id" ref="view_quote_pzb_tree"/>
        </record>

        <menuitem id="menu_action_quote_pzb" action="action_quote_pzb" parent="base.menu_sales" sequence="12" name="报价单配置表"/>


    </data>
</openerp>