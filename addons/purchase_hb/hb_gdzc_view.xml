<?xml version="1.0"?>
<openerp>
<data>
    <record id="hb_gdzc_form" model="ir.ui.view">
            <field name="name">hb.gdzc.form</field>
            <field name="model">hb.gdzc</field>
            <field name="arch" type="xml">
                <form string="zj apply">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date"/>
                            <field name="create_date"/>
                        </group>
                        <group>
                            <field name="create_uid"/>
                            <field name="department_id"/>
                            <field name="employee_sh_id"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>



        <record id="view_hb_gdzc_filter" model="ir.ui.view">
            <field name="name">hb.gdzc.list.select</field>
            <field name="model">hb.gdzc</field>
            <field name="arch" type="xml">
                <search string="Search zj apply">
                </search>
            </field>
        </record>

        <record id="hb_gdzc_tree" model="ir.ui.view">
            <field name="name">hb.gdzc.tree</field>
            <field name="model">hb.gdzc</field>
            <field name="arch" type="xml">
                <tree  string="zj apply">
                    <field name="name" string="名称"/>
                </tree>
            </field>
        </record>

        <record id="hb_gdzc" model="ir.actions.act_window">
            <field name="name">固定资产管理</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hb.gdzc</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hb_gdzc_filter"/>
        </record>
 
        <menuitem action="hb_gdzc" id="menu_hb_gdzc"
            parent="stock.menu_stock_inventory_control"
            sequence="8" name="固定资产管理"/>
</data>
</openerp>
