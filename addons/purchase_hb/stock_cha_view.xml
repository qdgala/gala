<?xml version="1.0"?>
<openerp>
<data>
    <!--qxs-->
    <record id="view_wizard_stock_search_s" model="ir.ui.view">
        <field name="name">库存查询</field>
        <field name="model">stock.search.s</field>
        <field name="arch" type="xml">
            <form string="Choose your date">
                <group>
                    <field name="date_start" string="开始时间"/>
                    <field name="date_end" string="结束时间"/>
                </group>
                <footer>
                    <button name="action_stock_s" string="检索库存" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_wizard_stock_search_s" model="ir.actions.act_window">
        <field name="name">库存查询</field>
        <field name="res_model">stock.search.s</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_wizard_stock_search_s"/>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_action_wizard_stock_search_s" action="action_wizard_stock_search_s" parent="stock.menu_warehouse_report" sequence="3"/>

    <record id="view_wizard_stock_cha_form" model="ir.ui.view">
        <field name="name">库存</field>
        <field name="model">stock.cha</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                <field name="product_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <group colspan="6">
                    <group>
                        <field name="dj_start"/>
                        <field name="dj_in"/>
                        <field name="dj_out"/>
                        <field name="dj_end"/>
                    </group>
                    <group>
                        <field name="quantity_start"/>
                        <field name="quantity_in"/>
                        <field name="quantity_out"/>
                        <field name="quantity_end"/>
                    </group>
                    <group>
                        <field name="jz_start"/>
                        <field name="jz_in"/>
                        <field name="jz_out"/>
                        <field name="jz_end"/>
                    </group>
                </group>
                <field name="stock_ids"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_wizard_stock_cha_tree" model="ir.ui.view">
        <field name="name">库存</field>
        <field name="model">stock.cha</field>
        <field name="arch" type="xml">
            <tree string="库存" create="0" delete="0">
                <field name="product_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="dj_start"/>
                <field name="quantity_start"/>
                <field name="jz_start"/>
                <field name="dj_in"/>
                <field name="quantity_in"/>
                <field name="jz_in"/>
                <field name="dj_out"/>
                <field name="quantity_out"/>
                <field name="jz_out"/>
                <field name="dj_end"/>
                <field name="quantity_end"/>
                <field name="jz_end"/>
            </tree>
        </field>
    </record>
</data>
</openerp>
