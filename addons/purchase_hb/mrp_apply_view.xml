<?xml version="1.0"?>
<openerp>
<data>
    <record id="mrp_apply_form" model="ir.ui.view">
            <field name="name">mrp.apply.form</field>
            <field name="model">mrp.apply</field>
            <field name="arch" type="xml">
                <form string="mrp apply">
                <header>
                    <button name="button_confirm" type="object" states="draft" string="确认申请" id="draft_confirm"/>
                    <button name="button_confirm_fan" type="object" states="done" string="重置为草稿" id="draft_confirm_fan"/>
                    <button name="button_quxiao" type="object" states="done" string="取消申请" id="draft_quxiao"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done,quxiao" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <label string="生产计划单"/>
                            <field name="name" class="oe_inline" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="create_uid"/>
                            <field name="create_date"/>
                            <field name="ly"/>
                            <field name="amount_total"/>
                        </group>
                        <group>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                            <field name="employee_sh_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="计划明细">
                            <field name="order">
                                <tree string="mrp apply Lines" editable="bottom">
                                    <field name="product_id"/>
                                    <field name="qty_pro"/>
                                    <field name="product_qty"/>
                                    <field name="dhsj"/>
                                    <field name="wcsj"/>
                                    <field name="state"/>
                                    <field name="mrp"/>
                                    <button type="object" name="open_this_rec" icon="gtk-index"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>

        <record id="view_mrp_apply_filter" model="ir.ui.view">
            <field name="name">mrp.apply.list.select</field>
            <field name="model">mrp.apply</field>
            <field name="arch" type="xml">
                <search string="Search mrp apply">
                </search>
            </field>
        </record>

        <record id="mrp_apply_tree" model="ir.ui.view">
            <field name="name">mrp.apply.tree</field>
            <field name="model">mrp.apply</field>
            <field name="arch" type="xml">
                <tree  string="mrp apply">
                    <field name="name" string="序号"/>
                </tree>
            </field>
        </record>

        <record id="mrp_apply" model="ir.actions.act_window">
            <field name="name">生产计划单</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.apply</field>
            <field name="context">{}</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_mrp_apply_filter"/>
        </record>
        <menuitem id="menu_hb_mrp" name="生产"
            parent="base.menu_purchase_root" sequence="0" />

        <menuitem action="mrp_apply" id="menu_mrp_apply"
            parent="menu_hb_mrp"
            sequence="0" name="生产计划单"/>

        <record id="seq_mrp_apply" model="ir.sequence">
            <field name="name">mrp apply</field>
            <field name="code">mrp.apply</field>
            <field name="prefix">mrp</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
    <!--生产申请明细-->

    <record id="view_mrp_apply_order_filter" model="ir.ui.view">
            <field name="name">mrp.apply.order.list.select</field>
            <field name="model">mrp.apply.order</field>
            <field name="arch" type="xml">
                <search string="Search mrp apply">
                </search>
            </field>
        </record>

    <record id="mrp_apply_order_tree" model="ir.ui.view">
            <field name="name">mrp.apply.order.tree</field>
            <field name="model">mrp.apply.order</field>
            <field name="arch" type="xml">
                <tree  string="mrp apply order">
                    <field name="apply"/>
                    <field name="product_id"/>
                    <field name="qty_pro"/>
                    <field name="product_qty"/>
                    <field name="dhsj"/>
                    <field name="wcsj"/>
                    <field name="state"/>
                    <field name="mrp"/>
                    <button type="object" name="open_this_rec" icon="gtk-index"/>
                </tree>
            </field>
        </record>

        <record id="win_mrp_apply_order" model="ir.actions.act_window">
            <field name="name">生产计划明细</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.apply.order</field>
            <field name="context">{}</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="view_mrp_apply_order_filter"/>
        </record>

        <menuitem action="win_mrp_apply_order" id="menu_mrp_apply_order"
            parent="menu_hb_mrp"
            sequence="1" name="生产计划明细"/>
</data>
</openerp>
